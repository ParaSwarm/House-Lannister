<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.uco.houselannister.saveasingle.fragments.SearchFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_icon_container_height">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/layout_padding_default"
            android:text="search fragment"
            android:textAppearance="?android:textAppearanceLarge" />
    </FrameLayout>

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/layout_padding_default"
        android:text="search"
        android:textAppearance="?android:textAppearanceLarge"/>

</LinearLayout>